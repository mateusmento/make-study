CC = gcc
CFLAGS = -Iinclude

vpath %.c src

SRC := $(wildcard src/*.c)
OBJ := $(patsubst src/%.c,obj/%.o,$(SRC))
DEP := $(patsubst src/%.c,dep/%.d,$(SRC))

bin/main: $(OBJ)
	@mkdir -p bin
	$(LINK.o) -o $@ $^

$(OBJ): obj/%.o: %.c
	@mkdir -p obj
	$(COMPILE.c) -o $@ $<

-include $(DEP)

$(DEP): dep/%.d: %.c
	@mkdir -p dep
	$(CC) $(CFLAGS) -MM $< -MT "obj/$*.o $@" > $@
